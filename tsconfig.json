{
	"compilerOptions": {
		"target": "ES2017",
		"module": "commonjs",
		"lib": ["ES6"],
		"allowJs": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"removeComments": true,
		"strict": true,
		"noEmit": true,
		"baseUrl": "./src",
		"paths": {
			"@models/*": ["./models/*"],
			"@controllers/*": ["./controllers/*"],
			"@views/*": ["./views/*"],
			"@configs/*": ["./configs/*"],
			"@middlewares/*": ["./middlewares/*"],
			"@exceptions/*": ["./exceptions/*"],
			"@routes/*": ["./routes/*"],
			"@index-routes": ["./routes"]
		},
		"typeRoots": ["./node_modules/@types", "./src/@types"],
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*"]
}
